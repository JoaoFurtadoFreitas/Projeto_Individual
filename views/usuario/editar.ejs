<!-- views/usuario/editar.ejs -->
<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>Editar Perfil - Go4It</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/public/css/editar-perfil.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
  <div class="editar-container">
    <h1 class="editar-title">Editar Perfil</h1>
    <form action="/usuario/editar" method="POST">
      <div class="form-group">
        <label for="nome" class="form-label">Nome</label>
        <input type="text" class="form-input" id="nome" name="nome" value="<%= usuario.nome %>" required>
      </div>
      <div class="form-group">
        <label class="form-label">Labels de Interesse</label>
        <div class="labels-grid">
          <% labels.forEach(label => { %>
            <label class="checkbox-label">
              <input type="checkbox" name="labels[]" value="<%= label.id %>" <%= usuario.labels.some(l => l.id === label.id) ? 'checked' : '' %>>
              <span><%= label.nome %></span>
            </label>
          <% }) %>
        </div>
      </div>
      <button type="submit" class="btn-salvar">
        <i class="fas fa-save"></i> Salvar Alterações
      </button>
    </form>
  </div>
</body>
</html>
