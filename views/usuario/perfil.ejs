<!-- views/perfil.ejs -->
<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Meu Perfil - Go4It</title>
  <link rel="stylesheet" href="/public/css/perfil.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
  <div class="perfil-container">
    <a href="/home" class="perfil-back-btn"><i class="fas fa-arrow-left"></i> Voltar para In√≠cio</a>
    <h1 class="perfil-title">Meu Perfil</h1>
    <div class="perfil-info">
      <span class="perfil-label">Nome</span>
      <div class="perfil-value"><%= usuario.nome %></div>
      <span class="perfil-label">E-mail</span>
      <div class="perfil-value"><%= usuario.email %></div>
      <span class="perfil-label">Tipo</span>
      <div class="perfil-value"><%= usuario.tipo %></div>
    </div>
    <div class="perfil-labels-section">
      <span class="perfil-label">Labels de Interesse</span>
      <% if (usuario.labels && usuario.labels.length > 0) { %>
        <ul class="perfil-labels-list">
          <% usuario.labels.forEach(label => { %>
            <li class="perfil-label-item"><%= label.nome %></li>
          <% }) %>
        </ul>
      <% } else { %>
        <div class="perfil-label-item empty">Nenhuma label selecionada.</div>
      <% } %>
    </div>
    <a href="/usuario/editar" class="perfil-edit-btn">
      <i class="fas fa-pen"></i> Editar Perfil
    </a>
  </div>
</body>
</html>
