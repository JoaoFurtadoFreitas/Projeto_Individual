<!-- views/perfil.ejs -->
<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Meu Perfil - Go4It</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/public/css/style.css">
</head>
<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container-fluid">
              <a class="navbar-brand" href="/home">Go4It</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><a class="nav-link active" href="/usuario/perfil">Meu Perfil</a></li>
          <li class="nav-item"><a class="nav-link" href="/auth/logout">Sair</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- ConteÃºdo do Perfil -->
  <section class="container py-5">
    <h2 class="mb-4 text-center">Meu Perfil</h2>
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= usuario.nome %></h5>
            <p class="card-text"><strong>Email:</strong> <%= usuario.email %></p>
            <p class="card-text"><strong>Tipo:</strong> <%= usuario.tipo %></p>
            <hr>
           <h6 class="mt-4">Labels de Interesse</h6>
          <% if (usuario.labels && usuario.labels.length > 0) { %>
            <ul class="list-group list-group-flush">
              <% usuario.labels.forEach(label => { %>
                <li class="list-group-item"><%= label.nome %></li>
              <% }) %>
            </ul>
          <% } else { %>
            <p class="text-muted">Nenhuma label selecionada.</p>
          <% } %>

            <a href="/usuario/editar" class="btn btn-outline-primary mt-3">Editar Perfil</a>
          </div>
        </div>
      </div>
    </div>
  </section>
  <%- include('../partials/footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
