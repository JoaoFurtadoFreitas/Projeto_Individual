<%- include('partials/header', { usuario: usuario }) %>

<h2>Recomendados</h2>
<div class="card-container">
  <% recomendadas.forEach(o => { %>
    <div class="card">
      <img src="<%= o.imagem_url || '/default.png' %>" alt="Imagem">
      <h3><%= o.titulo %></h3>
      <p>Prazo: <%= new Date(o.data_limite).toLocaleDateString() %></p>
      <a href="/oportunidade/<%= o.id %>">Ver detalhes</a>
    </div>
  <% }) %>
</div>

