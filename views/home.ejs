<!-- views/home.ejs -->
<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Central de Oportunidades</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/public/css/style.css">
</head>
<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container-fluid">
      <a class="navbar-brand" href="/home">Oportunidades</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
         

        <% if (usuario) { %>
          <li class="nav-item"><a class="nav-link" href="/usuario/perfil">Meu Perfil</a></li>
          <li class="nav-item"><a class="nav-link" href="/auth/logout">Sair</a></li>
        <% } else { %>
          <li class="nav-item"><a class="nav-link" href="/auth/login">Login</a></li>
          <li class="nav-item"><a class="nav-link" href="/auth/register">Cadastrar</a></li>
        <% } %>

        </ul>
      </div>
    </div>
  </nav>

  <!-- Header -->
  <header class="bg-light py-5 text-center">
    <div class="container">
      <h1 class="display-4">Bem-vindo à Central de Oportunidades</h1>
      <p class="lead">Descubra e compartilhe oportunidades acadêmicas e profissionais</p>
    </div>
  </header>

  <!-- CTA -->
  <% if (!usuario) { %>
  <section class="py-4 bg-primary text-white text-center">
    <div class="container">
      <h2>Junte-se à nossa comunidade!</h2>
      <a href="/auth/register" class="btn btn-light btn-lg mt-3">Cadastre-se</a>
    </div>
  </section>
  <% } %>

  <!-- Oportunidades Recomendadas -->
<% if (recomendadas && recomendadas.length) { %>
<section class="container py-5">
  <h3>Oportunidades Recomendadas</h3>
  <div class="row">
    <% recomendadas.forEach(o => { %>
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <% if (o.imagem_url) { %>
            <img src="<%= o.imagem_url %>" class="card-img-top" alt="Imagem da oportunidade">
          <% } %>
          <div class="card-body">
            <h5 class="card-title"><%= o.titulo %></h5>
            <p class="card-text"><%= o.resumo %></p>
            <% if (o.labels && o.labels.length) { %>
              <div class="mb-2">
                <% o.labels.forEach(label => { %>
                  <span class="badge bg-secondary me-1"><%= label.nome %></span>
                <% }) %>
              </div>
            <% } %>

            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalOportunidade<%= o.id %>">Detalhes</button>
          </div>
        </div>
      </div>

      <!-- Modal da Oportunidade -->
      <div class="modal fade" id="modalOportunidade<%= o.id %>" tabindex="-1" aria-labelledby="modalOportunidadeLabel<%= o.id %>" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="modalOportunidadeLabel<%= o.id %>"><%= o.titulo %></h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
            </div>
            <div class="modal-body">
              <p><%= o.descricao %></p>
              <a href="<%= o.link %>" class="btn btn-success" target="_blank" rel="noopener noreferrer">Acessar oportunidade</a>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
            </div>
          </div>
        </div>
      </div>
    <% }) %>
  </div> <!-- Fim da row -->
</section>
<% } %>

  <!-- Próximas da Data Limite -->
  <% if (proximas && proximas.length) { %>
  <section class="container py-5">
    <h3>Próximas da Data Limite</h3>
    <div class="row">
      <% proximas.forEach(o => { %>
        <div class="col-md-4 mb-4">
          <div class="card h-100 border-warning">
            <div class="card-body">
              <h5 class="card-title"><%= o.titulo %></h5>
              <p class="card-text"><%= o.descricao %></p>
              <% if (o.labels && o.labels.length) { %>
              <div class="mb-2">
                <% o.labels.forEach(label => { %>
                  <span class="badge bg-secondary me-1"><%= label.nome %></span>
                <% }) %>
              </div>
            <% } %>

              <p class="text-danger">Inscrição até: <%= new Date(o.data_limite).toLocaleDateString('pt-BR') %></p>
              <button class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#modalOportunidade<%= o.id %>">
                Ver detalhes
              </button>
                          <!-- Modal da Oportunidade -->
            <div class="modal fade" id="modalOportunidade<%= o.id %>" tabindex="-1" aria-labelledby="modalOportunidadeLabel<%= o.id %>" aria-hidden="true">
              <div class="modal-dialog modal-lg modal-dialog-centered">
                <div class="modal-content">
                  <% if (o.imagem_url) { %>
                    <img src="<%= o.imagem_url %>" class="img-fluid rounded-top" alt="Imagem da oportunidade">
                  <% } %>
                  <div class="modal-header">
                    <h5 class="modal-title" id="modalOportunidadeLabel<%= o.id %>"><%= o.titulo %></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
                  </div>
                  <div class="modal-body">
                    <% if (o.labels && o.labels.length) { %>
                    <div class="mb-3">
                      <strong>Labels:</strong>
                      <% o.labels.forEach(label => { %>
                        <span class="badge bg-info text-dark me-1"><%= label %></span>
                      <% }) %>
                    </div>
                  <% } %>

                    <p><%= o.descricao %></p>
                    <a href="<%= o.link %>" class="btn btn-success" target="_blank" rel="noopener noreferrer">Acessar oportunidade</a>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                  </div>
                </div>
              </div>
            </div>


            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </section>
  <% } %>

   <% if (usuario) { %>
<section class="container py-4">
  <a href="#" class="btn btn-success mb-4" data-bs-toggle="modal" data-bs-target="#modalAdicionarOportunidade">
    Criar nova oportunidade
  </a>

  <!-- Modal -->
  <div class="modal fade" id="modalAdicionarOportunidade" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
      <div class="modal-content">
        <form method="POST" action="/oportunidades/nova">
          <div class="modal-header">
            <h5 class="modal-title" id="modalLabel">Nova Oportunidade</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
          </div>
          <div class="modal-body">
            <!-- Campos do formulário -->
            <div class="mb-3">
              <label for="titulo" class="form-label">Título</label>
              <input type="text" class="form-control" name="titulo" id="titulo" required>
            </div>
            <div class="mb-3">
              <label for="descricao" class="form-label">Descrição</label>
              <textarea class="form-control" name="descricao" id="descricao" rows="4" required></textarea>
            </div>
            <div class="mb-3">
              <label for="imagem_url" class="form-label">URL da Imagem</label>
              <input type="url" class="form-control" name="imagem_url" id="imagem_url">
            </div>
            <div class="mb-3">
              <label for="link" class="form-label">Link da Oportunidade</label>
              <input type="url" class="form-control" name="link" id="link" required>
            </div>
            <div class="mb-3">
              <label for="data_limite" class="form-label">Data Limite</label>
              <input type="date" class="form-control" name="data_limite" id="data_limite" required>
            </div>
            <div class="mb-3">
              <label class="form-label">Labels</label>
              <div class="form-check form-check-inline">
                <% labelsDisponiveis.forEach(label => { %>
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" name="labels[]" id="label_<%= label %>" value="<%= label %>">
                    <label class="form-check-label" for="label_<%= label %>"><%= label %></label>
                  </div>
                <% }) %>
              </div>
            </div>

          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
            <button type="submit" class="btn btn-primary">Adicionar</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
<% } %>

  <!-- FAQ -->
  <section class="container py-5">
    <h3>Perguntas Frequentes</h3>
    <div class="accordion" id="faqAccordion">
      <div class="accordion-item">
        <h2 class="accordion-header" id="faq1">
          <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse1">
            Como posso me cadastrar?
          </button>
        </h2>
        <div id="collapse1" class="accordion-collapse collapse show" data-bs-parent="#faqAccordion">
          <div class="accordion-body">
            Basta clicar em "Cadastrar" na barra superior e preencher o formulário.
          </div>
        </div>
      </div>

      <div class="accordion-item">
        <h2 class="accordion-header" id="faq2">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse2">
            Quem pode publicar oportunidades?
          </button>
        </h2>
        <div id="collapse2" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
          <div class="accordion-body">
            Qualquer usuário cadastrado pode submeter uma nova oportunidade.
          </div>
        </div>
      </div>
    </div>
  </section>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
