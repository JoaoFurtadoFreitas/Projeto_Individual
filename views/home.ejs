<!-- views/home.ejs -->
<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Go4It</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/public/css/style.css">
  <link rel="stylesheet" href="/public/css/navbar.css">
  <link rel="stylesheet" href="/public/css/home.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>

  <!-- Navbar -->
  <nav class="navbar">
    <div class="navbar-container">
      <a href="/home" class="navbar-logo">
        <i class="fas fa-rocket logo-icon"></i>
        Go4It
      </a>
      
      <button class="navbar-toggle" id="navbarToggle" aria-label="Toggle navigation">
        <span class="navbar-toggle-icon"></span>
      </button>
      
      <ul class="navbar-menu" id="navbarMenu">
        <li class="navbar-item">
          <a href="/home" class="navbar-link active">
            <i class="fas fa-home navbar-icon"></i>
            Início
          </a>
        </li>
        <li class="navbar-item">
          <a href="/favorites" class="navbar-link favorites">
            <i class="fas fa-heart navbar-icon"></i>
            Favoritos
          </a>
        </li>
        <li class="navbar-item">
          <a href="/perfil" class="navbar-link">
            <i class="fas fa-user navbar-icon"></i>
            Perfil
          </a>
        </li>
      </ul>
    </div>
  </nav>

  <!-- Header da página -->
  <div class="page-header">
    <div class="container">
      <h1 class="page-title">Eventos e Oportunidades</h1>
      <p class="page-subtitle">Descubra eventos incríveis e oportunidades únicas para expandir seus horizontes</p>
    </div>
  </div>

  <!-- Menu de filtros por tag -->
  <div class="filters-section">
    <div class="container">
      <div class="filters-container">
        <div class="filters-scroll">
          <a href="/home" class="filter-btn filter-btn-all">
            <i class="fas fa-th-large"></i>
            Todos
          </a>
          <% if (labelsDisponiveis && labelsDisponiveis.length > 0) { %>
            <% labelsDisponiveis.forEach(tag => { %>
              <a href="/filter/<%= tag %>" class="filter-btn filter-btn-<%= tag.toLowerCase() %>">
                <%= tag %>
              </a>
            <% }) %>
          <% } %>
        </div>
      </div>
    </div>
  </div>

  <!-- Container principal de eventos -->
  <div class="events-container">
    <div class="events-grid">
      <% if (todas && todas.length > 0) { %>
        <% todas.forEach((evento) => { %>
          <div class="event-card">
            <% if (evento.imagem_url) { %>
              <img src="<%= evento.imagem_url %>" alt="<%= evento.titulo %>" class="event-image">
            <% } else { %>
              <div class="event-image"></div>
            <% } %>
            
            <div class="event-content">
              <h3 class="event-title"><%= evento.titulo %></h3>
              
              <div class="event-location">
                <i class="fas fa-map-marker-alt location-icon"></i>
                <span><%= evento.local || 'Local a definir' %></span>
              </div>
              
              <% if (evento.distancia) { %>
                <div class="event-distance">
                  <i class="fas fa-location-arrow"></i>
                  <%= evento.distancia %> km
                </div>
              <% } %>
              
              <div class="event-date">
                <i class="fas fa-calendar-alt"></i>
                <%= new Date(evento.data_limite).toLocaleDateString('pt-BR', { 
                  day: '2-digit', 
                  month: '2-digit', 
                  year: 'numeric' 
                }) %>
              </div>
              
              <% if (evento.tipo) { %>
                <div class="event-type">
                  <i class="fas fa-tag"></i>
                  <%= evento.tipo %>
                </div>
              <% } %>
              
              <% if (evento.labels && evento.labels.length > 0) { %>
                <div class="event-tags">
                  <% evento.labels.forEach(label => { %>
                    <% if (label && label.nome) { %>
                      <span class="event-tag"><%= label.nome %></span>
                    <% } %>
                  <% }) %>
                </div>
              <% } %>
              
              <a href="/events/<%= evento.id %>" class="event-details-btn">
                <i class="fas fa-eye"></i>
                Ver detalhes
              </a>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <div class="events-empty">
          <div class="events-empty-icon">
            <i class="fas fa-calendar-times"></i>
          </div>
          <h3>Nenhum evento encontrado</h3>
          <p>Não há eventos disponíveis no momento. Volte mais tarde!</p>
        </div>
      <% } %>
    </div>
  </div>

  <!-- Botão para adicionar novo evento (apenas para usuários logados) -->
  <% if (usuario) { %>
    <div class="container text-center mt-5">
      <a href="#" class="btn btn-success btn-lg" data-bs-toggle="modal" data-bs-target="#modalAdicionarOportunidade">
        <i class="fas fa-plus"></i>
        Criar novo evento
      </a>
    </div>
  <% } %>

  <!-- Modal para adicionar evento -->
  <% if (usuario) { %>
    <div class="modal fade" id="modalAdicionarOportunidade" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
      <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
          <form method="POST" action="/oportunidades/nova">
            <div class="modal-header">
              <h5 class="modal-title" id="modalLabel">Novo Evento</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
            </div>
            <div class="modal-body">
              <div class="mb-3">
                <label for="titulo" class="form-label">Título do Evento</label>
                <input type="text" class="form-control" name="titulo" id="titulo" required>
              </div>
              <div class="mb-3">
                <label for="descricao" class="form-label">Descrição</label>
                <textarea class="form-control" name="descricao" id="descricao" rows="4" required></textarea>
              </div>
              <div class="mb-3">
                <label for="imagem_url" class="form-label">URL da Imagem</label>
                <input type="url" class="form-control" name="imagem_url" id="imagem_url">
              </div>
              <div class="mb-3">
                <label for="link" class="form-label">Link do Evento</label>
                <input type="url" class="form-control" name="link" id="link" required>
              </div>
              <div class="mb-3">
                <label for="data_limite" class="form-label">Data do Evento</label>
                <input type="date" class="form-control" name="data_limite" id="data_limite" required min="<%= new Date().toISOString().split('T')[0] %>">
              </div>
              <div class="mb-3">
                <label class="form-label">Categorias</label>
                <div class="form-check form-check-inline">
                  <% if (labelsDisponiveis) { %>
                    <% labelsDisponiveis.forEach(label => { %>
                      <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" name="labels[]" id="label_<%= label %>" value="<%= label %>">
                        <label class="form-check-label" for="label_<%= label %>"><%= label %></label>
                      </div>
                    <% }) %>
                  <% } %>
                </div>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
              <button type="submit" class="btn btn-primary">Criar Evento</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  <% } %>

  <%- include('partials/footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Toggle do menu hambúrguer
    document.addEventListener('DOMContentLoaded', function() {
      const navbarToggle = document.getElementById('navbarToggle');
      const navbarMenu = document.getElementById('navbarMenu');
      
      navbarToggle.addEventListener('click', function() {
        navbarToggle.classList.toggle('active');
        navbarMenu.classList.toggle('active');
      });
      
      // Fechar menu ao clicar em um link
      const navbarLinks = document.querySelectorAll('.navbar-link');
      navbarLinks.forEach(link => {
        link.addEventListener('click', function() {
          navbarToggle.classList.remove('active');
          navbarMenu.classList.remove('active');
        });
      });
    });
  </script>
</body>
</html>
